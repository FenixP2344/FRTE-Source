///////////////////////////////////////////////////////////////////////////////
// RestrainAndReportGoal.uc - RestrainAndReportGoal class
// The goal that causes the Officer to restrain a compliant suspect or hostage

class HealGoal extends SwatCharacterGoal;
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
//
// Variables

var(parameters) Pawn InjuredTarget;

///////////////////////////////////////////////////////////////////////////////
//
// Constructor

overloaded function construct( AI_Resource r, Pawn inInjuredTarget)
{
	super.construct( r );

	assert(inInjuredTarget != None);
	InjuredTarget = inInjuredTarget;
	log("New HealGoal posted. Target:" $ InjuredTarget.name );
}

///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
	priority = 80
	goalName = "HealGoal"
}
