///////////////////////////////////////////////////////////////////////////////
// ReloadGoal.uc - IdleGoal class
// this low priority goal is a permanent goal for all Weapon User AIs

class ReloadGoal extends SwatWeaponGoal;
///////////////////////////////////////////////////////////////////////////////
var(parameters) bool bQuickReload;


///////////////////////////////////////////////////////////////////////////////
//
// Constructor

overloaded function construct( AI_Resource r, int pri , optional bool QR )
{
	super.construct( r );
	
	bQuickReload=QR;
}


///////////////////////////////////////////////////////////////////////////////
defaultproperties
{
	// we never stop
    bPermanent = true

    priority   = 35
    goalName   = "Reload"
}
